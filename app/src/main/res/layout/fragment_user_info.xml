<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/perfil_usuari_nom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuari: "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/perfil_usuari_nom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/perfil_usuari_email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/perfil_usuari_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/perfil_usuari_minuts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minuts: "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/perfil_usuari_minuts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/perfil_usuari_punts1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punts de l'usuari: "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

        <ListView
            android:id="@+id/perfil_usuari_punts2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/perfil_usuari_puntsReser1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punts reservats de l'usuari: "
            android:textColor="@color/profile_black"
            android:textSize="22sp" />

        <ListView
            android:id="@+id/perfil_usuari_puntsReser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>