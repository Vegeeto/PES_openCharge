<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.opencharge.opencharge.presentation.fragments.CreatePublicPointsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/Afegir_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/weakblue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="@string/afegir_punt_carrega"
            android:gravity="center"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Direccio_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:text="@string/direccio"
            android:gravity="left"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Poblacio_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Poblacio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:gravity="start"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lloc_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Street"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/Number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Acces_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:text="@string/acces"
            android:gravity="left"
            android:layout_weight="2" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/Public_or_private"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginEnd="32dp"
            android:checked="false"
            android:text="@string/publics" />

        <RadioButton
            android:id="@+id/Privat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:checked="false"
            android:layout_marginEnd="16dp"
            android:text="@string/privat" />

        <RadioButton
            android:id="@+id/Particular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:checked="false"
            android:text="@string/particular" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/Horari_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:text="@string/horari"
            android:gravity="start"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Horari_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Horari"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:gravity="start"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Conector"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:text="@string/conector"
            android:gravity="start"
            android:layout_weight="2" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/tipus_connector"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/Slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:checked="true"
            android:gravity="center"
            android:drawableStart="@mipmap/connector_type1"
            android:text="@string/tipus1" />


        <RadioButton
            android:id="@+id/Fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:checked="false"
            android:gravity="center"
            android:drawableStart="@mipmap/connector_type2"
            android:layout_marginBottom="16dp"
            android:text="@string/tipus2" />

        <RadioButton
            android:id="@+id/Rapid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:checked="false"
            android:gravity="center"
            android:drawableStart="@mipmap/connector_type3"
            android:text="@string/tipus3" />
    </RadioGroup>

    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/GuardarBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="1"
            android:onClick="guardarPunt"
            android:text="@string/guardar" />

        <Button
            android:id="@+id/CancelarBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:onClick="cancelar"
            android:layout_weight="1"
            android:text="@string/cancelar" />
    </LinearLayout>

</LinearLayout>
